{
	"version": "2.0.0",
	"problemMatchers": [
		{
			"name": "odin",
			"owner": "odin",
			"fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*)\\((\\d+):(\\d+)\\)\\s+(.*)$",
				"file": 1,
				"line": 2,
				"column": 3,
				"message": 4
			}
		}
